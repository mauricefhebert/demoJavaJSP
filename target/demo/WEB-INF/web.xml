<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <display-name>Demo</display-name>
  <welcome-file-list>
    <welcome-file>ListeProduits.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>HelloWorld</servlet-name>
    <servlet-class>HelloWorld</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>HelloWorld</servlet-name>
      <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>ListeProduitsServlet</servlet-name>
      <servlet-class>ListeProduitsServlet</servlet-class>
      </servlet>
      <servlet-mapping>
        <servlet-name>ListeProduitsServlet</servlet-name>
        <url-pattern>/ListeProduits</url-pattern>
      </servlet-mapping>
      <servlet>
        <!-- Ajouter -->
        <servlet-name>AjouterServlet</servlet-name>
        <servlet-class>AjouterServlet</servlet-class>
        </servlet>
        <servlet-mapping>
          <servlet-name>AjouterServlet</servlet-name>
          <url-pattern>/AjouterProduit</url-pattern>
        </servlet-mapping>
        <!-- Modifier -->
        <servlet>
          <servlet-name>ModifierServlet</servlet-name>
          <servlet-class>ModifierServlet</servlet-class>
          </servlet>
          <servlet-mapping>
            <servlet-name>ModifierServlet</servlet-name>
            <url-pattern>/ModifierProduit</url-pattern>
          </servlet-mapping>
          <!-- Supprimer -->
          <servlet>
            <servlet-name>SupprimerServlet</servlet-name>
            <servlet-class>SupprimerServlet</servlet-class>
            </servlet>
            <servlet-mapping>
              <servlet-name>SupprimerServlet</servlet-name>
              <url-pattern>/SupprimerProduit</url-pattern>
            </servlet-mapping>
</web-app>